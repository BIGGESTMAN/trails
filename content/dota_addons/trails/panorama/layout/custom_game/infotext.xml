<root>
	<styles>
		<include src="s2r://panorama/styles/custom_game/infotext.css" />
		<include src="s2r://panorama/styles/custom_game/shared.css" />
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
	</styles>
	<scripts>
		<include src="s2r://panorama/scripts/custom_game/infotext.js" />
	</scripts>
	<Panel hittest="false" class="InfoTextContainer">
		<Button hittest="true" id="SlideButton" onactivate="OnInfoTextWindowToggled()">
			<Label hittest="false" id="SlideButtonText" text="&lt;&lt;"/>
		</Button>
		<Panel hittest="false" id="InfoTextWindow" class="InfoTextWindow TrailsGenericWindow">
			<Label hittest="false" id="Header" text="#infotext_header" />
			<Label hittest="false" class="SubHeader" text="#infotext_subheader_1" />
			<Label hittest="false" class="Text" html="true" text="#infotext_text_1" />

			<!-- <Label hittest="false" class="SubHeader" text="#preboss_nextboss_header" /> -->

			<Label hittest="false" class="SubHeader" text="#infotext_subheader_2" />
			<Label hittest="false" class="Text" html="true" text="#infotext_text_2" />
			<Label hittest="false" class="SubHeader" text="#infotext_subheader_3" />
			<Label hittest="false" class="Text" html="true" text="#infotext_text_3" />

			<Label hittest="false" class="TrailspediaHeader" html="true" text="#trailspedia_header"/>
			<Label hittest="false" class="TrailspediaText" html="true" text="#trailspedia_seal" />
			<Label hittest="false" class="TrailspediaText" html="true" text="#trailspedia_mute" />
			<Label hittest="false" class="TrailspediaText" html="true" text="#trailspedia_insight" />
			<Label hittest="false" class="TrailspediaText" html="true" text="#trailspedia_passion" />
			<Label hittest="false" class="TrailspediaText" html="true" text="#trailspedia_cp_boost" />
			<Label hittest="false" class="TrailspediaText" html="true" text="#trailspedia_burn" />
			<Label hittest="false" class="TrailspediaText" html="true" text="#trailspedia_freeze" />
			<Label hittest="false" class="TrailspediaText" html="true" text="#trailspedia_confuse" />
			<Label hittest="false" class="TrailspediaText" html="true" text="#trailspedia_nightmare" />
			<Label hittest="false" class="TrailspediaText" html="true" text="#trailspedia_deathblow" />
			<Label hittest="false" class="TrailspediaText" html="true" text="#trailspedia_petrify" />
			<Label hittest="false" class="TrailspediaText" html="true" text="#trailspedia_faint" />

			<Button hittest="true" id="OKButton" class="ButtonBevel" onactivate="OnInfoTextOKClicked()">
				<Label id="ReadyButtonText" text="#infotext_ok" />
			</Button>
			<Label hittest="false" id="ReadyText" html="false" text="#you_are_ready" />
		</Panel>
		<Button hittest="true" id="PageToggleButton" onactivate="OnInfoTextPageChanged()">
			<Label hittest="false" id="PageToggleText" text="Status Effects"/>
		</Button>
	</Panel>
</root>
